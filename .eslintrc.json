{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "always",
            { "js": "off" }
        ],
        "no-console": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
}
